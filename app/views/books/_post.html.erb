<p id="mi-2"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
           <h2>User info</h2> 
           <%= image_tag current_user.get_profile_image(100, 100) %>
           <table class="table">
               <tbody>
                 <tr></tr>
                   <tr>
	                 <th>name</th>
	                 <th><%= current_user.name %></th>
                   </tr>
                   <tr>
	                 <th>introduction</th>
	                 <th><%= current_user.introduction %></th>
                   </tr>
               </tbody>
           </table>
           <div class="row">
               <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do  %>
               <i class="fas fa-user-cog"></i>
               <% end %>
           </div>
           <h2 class="mt-3">New books</h2>
           <%= form_with model: book do |f| %>
           <p>Title</p>
           <%= f.text_field :title %>
	
           <p>Opinion</p>
           <%= f.text_area :body %>
	
           <%= f.submit 'Create Book', class: 'btn btn-outline-success' %>
           <% end %>
        </div>