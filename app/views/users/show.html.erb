<%= notice %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <!-- サイドバー -->
    <div class="col-md-3">
      <!--プロフィール-->
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th>
              name
            </th>
            <td>
              <%= @user.name %>
            </td>
          </tr>
          <tr>
            <th>
              introduction
            </th>
            <td>
              <%= @user.introduction %>
            </td>
          </tr>
        </table>

        <!--部分テンプレート-->
        <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <!-- ユーザーの投稿一覧 -->
      <table class="table">
        <tr>
          <th colspan="2">Title</th>
          <th>Opinion</th>
        </tr>
        <% @bookers.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user.id) do %><%= image_tag @user.get_profile_image(100,100) %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>